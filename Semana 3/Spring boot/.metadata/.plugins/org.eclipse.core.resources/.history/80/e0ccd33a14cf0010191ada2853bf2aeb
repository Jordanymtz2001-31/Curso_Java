package com.mx.Cine.Controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.mx.Cine.Dominio.Cine;
import com.mx.Cine.Service.CineServicio;

@RestController //Antacion para indicar que es un controlador REST
@RequestMapping(path="/cines") //Mapea las solicitudes HTTP a /cines a este controlador
@CrossOrigin //Permite solicitudes CORS desde cualquier origen

public class CineController {
	
	//Inyectamos la dependencia del servicio de Cine
	@Autowired
	private CineServicio service;
	
	//Listar cines
	@GetMapping(path = "/listar")
	public List<Cine> listar() {
		return service.leerCines();
	}
	
	//Guardar cine
	@PostMapping(path = "/guardar")
	public ResponseEntity<String> guardar(@RequestBody Cine cine) {
		try {
			service.crearCine(cine);
			return ResponseEntity.status(HttpStatus.CREATED).body("Cine creado exitosamente");
		} catch (IllegalArgumentException e) {
			//Aqui manejamos la excepcion si el cine ya existe
			//Con un estado HTTP 409 CONFLICT que indica que la solicitud no se pudo completar debido a un conflicto con el estado actual del recurso
			return ResponseEntity.status(HttpStatus.CONFLICT).body(e.getMessage());
		}
	}
	
	//Editar cine
	@PutMapping(path = "/editar")
	public ResponseEntity<String> editar(@RequestBody Cine cine) {
		service.actualizarCine(cine);
		//Devolvemos un mensaje de exito
		return ResponseEntity.status(HttpStatus.OK).body("Cine actualizado exitosamente");
	}
	
	//Buscar cine
	@PostMapping(path = "/buscar")
	public ResponseEntity<Object> buscar(@RequestBody Cine idCine) {
		Cine cine = service.buscarCine(idCine);
		
		//Checamos si el cine existe
		try {
			return ResponseEntity.status(HttpStatus.OK).body(cine);
		} catch (IllegalArgumentException e) {
			//Si no existe, devolvemos null
			return ResponseEntity.status(HttpStatus.NOT_FOUND).body("No se encontro el cine");
		}
		
		
	}
	
	//Eliminar cine
	@DeleteMapping(path = "/eliminar")
	public ResponseEntity<String> eliminar(@RequestBody Cine idCine) {
		service.eliminarCine(idCine);
		//Mandamos un mensaje de exito
		return ResponseEntity.status(HttpStatus.OK).body("Cine eliminado exitosamente");
	}

}
